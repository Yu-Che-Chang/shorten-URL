<div class="container py-5">
  <div class="card-body mx-auto d-flex flex-column align-items-center">
    <div>
      <h4 class="fs-2 text-center">URL Shortener</h4>
      <img src="images/ExportedContentImage_00.png" alt="" class="img img-fluid rounded mx-auto d-block col-3">
    </div>
    <div class="mt-3 col-6">
      <form action="/" method="post" class="form" novalidate>
        <input type="url" class="form-control pe-3" placeholder="http://" name="url" value="https://www.youtube.com/"
          required>
        <div class="input"></div>
        <span class="magnifier"><i class="fa-solid fa-magnifying-glass"></i></span>
    </div>
    <div class="mt-2">
      <button type="submit" class="btn btn-primary">縮網址</button>
    </div>
    </form>
    {{#if Data}}
    <div class="return-url">
      <h4 class="fs-2 text-center">Url: <a href="{{Data.url}}">{{Data.url}}</a></h4>
      <h4 class="fs-2 text-center">ShortenUrl: <a href="{{Data.shortenUrl}}">{{Data.shortenUrl}}</a></h4>
    </div>
    {{/if}}
  </div>
</div>